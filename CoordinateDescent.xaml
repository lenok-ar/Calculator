<Page
    x:Class="Calculator.CoordinateDescent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:oxy="http://oxyplot.org/wpf"
    xmlns:oxyPlot="clr-namespace:OxyPlot.Wpf;assembly=OxyPlot.Wpf"
    Title="Метод покоординатного спуска" 
    Height="700" 
    Width="1100">

    <Page.Resources>
        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="24" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="#2C3E50" />
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="#34495E" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,0,10,0" />
        </Style>

        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Height" Value="40" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Background" Value="#FFFFFF" />
            <Setter Property="BorderBrush" Value="#BDC3C7" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#3498DB" />
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#2980B9" />
                    <Setter Property="BorderThickness" Value="3" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ResultTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource InputTextBoxStyle}">
            <Setter Property="Background" Value="#F8F9FA" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="Foreground" Value="#2C3E50" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="200" />
            <Setter Property="Height" Value="45" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Background" Value="#3498DB" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="8">
                            <ContentPresenter 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"
                                Margin="10,5"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2980B9" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1F618D" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BackButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#95A5A6" />
            <Setter Property="Width" Value="120" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7F8C8D" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#616A6B" />
                </Trigger>
            </Style.Triggers>
        </Style>

    </Page.Resources>

    <Grid Background="#F5F7FA">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Левая панель - Ввод данных -->
        <Border
            Grid.Column="0"
            Margin="15"
            Background="White"
            CornerRadius="12"
            BorderBrush="#E0E0E0"
            BorderThickness="1">

            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="20"
                    Opacity="0.1"
                    ShadowDepth="3"
                    Direction="270" />
            </Border.Effect>

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="25">

                    <!-- Заголовок -->
                    <TextBlock
                        Style="{StaticResource TitleStyle}"
                        Margin="0,0,0,20" ><Run Text="Метод покоординатного"/><LineBreak/><Run Text="спуска"/></TextBlock>

                    <!-- Функция -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Style="{StaticResource LabelStyle}" Text="Функция f(x,y,z):" />
                        <TextBox
                            x:Name="FunctionTextBox"
                            Style="{StaticResource InputTextBoxStyle}"
                            Text="x^2 + y^2"
                            ToolTip="Примеры: x^2+y^2, sin(x)+cos(y), x*y+exp(-x^2-y^2). Используйте переменные x, y, z" />
                    </StackPanel>

                    <!-- Начальное приближение -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Style="{StaticResource LabelStyle}" Text="Начальная точка:" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="x₀ =" VerticalAlignment="Center" Margin="0,0,5,0" FontSize="16"/>
                            <TextBox Grid.Column="1" x:Name="TextBoxX0" Style="{StaticResource InputTextBoxStyle}" Text="1" Margin="0,0,10,0"/>

                            <TextBlock Grid.Column="2" Text="y₀ =" VerticalAlignment="Center" Margin="0,0,5,0" FontSize="16"/>
                            <TextBox Grid.Column="3" x:Name="TextBoxY0" Style="{StaticResource InputTextBoxStyle}" Text="1" Margin="0,0,10,0"/>

                            <TextBlock Grid.Column="4" Text="z₀ =" VerticalAlignment="Center" Margin="0,0,5,0" FontSize="16"/>
                            <TextBox Grid.Column="5" x:Name="TextBoxZ0" Style="{StaticResource InputTextBoxStyle}" Text="0" ToolTip="Оставьте 0, если не используется"/>
                        </Grid>
                    </StackPanel>

                    <!-- Область поиска -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Style="{StaticResource LabelStyle}" Text="Область поиска:" />

                        <Grid Margin="0,5,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Margin="0,0,0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="x ∈ " VerticalAlignment="Center"/>
                                <TextBox Grid.Column="1" x:Name="TextBoxXmin" Style="{StaticResource InputTextBoxStyle}" Text="-10" Height="35"/>
                                <TextBlock Grid.Column="2" Text="," VerticalAlignment="Center" Margin="5,0,5,0"/>
                                <TextBox Grid.Column="3" x:Name="TextBoxXmax" Style="{StaticResource InputTextBoxStyle}" Text="10" Height="35"/>
                                <TextBlock Grid.Column="4" Text="" VerticalAlignment="Center" Margin="140,0,0,0"/>
                            </Grid>

                            <Grid Grid.Row="1" Margin="0,0,0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="y ∈ " VerticalAlignment="Center"/>
                                <TextBox Grid.Column="1" x:Name="TextBoxYmin" Style="{StaticResource InputTextBoxStyle}" Text="-10" Height="35"/>
                                <TextBlock Grid.Column="2" Text="," VerticalAlignment="Center" Margin="5,0,5,0"/>
                                <TextBox Grid.Column="3" x:Name="TextBoxYmax" Style="{StaticResource InputTextBoxStyle}" Text="10" Height="35"/>
                                <TextBlock Grid.Column="4" Text="" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            </Grid>

                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="z ∈ " VerticalAlignment="Center"/>
                                <TextBox Grid.Column="1" x:Name="TextBoxZmin" Style="{StaticResource InputTextBoxStyle}" Text="-10" Height="35"/>
                                <TextBlock Grid.Column="2" Text="," VerticalAlignment="Center" Margin="5,0,5,0"/>
                                <TextBox Grid.Column="3" x:Name="TextBoxZmax" Style="{StaticResource InputTextBoxStyle}" Text="10" Height="35"/>
                                <TextBlock Grid.Column="4" Text="" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            </Grid>
                        </Grid>
                    </StackPanel>

                    <!-- Параметры метода -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Style="{StaticResource LabelStyle}" Text="Параметры метода:" />
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Row="0" Grid.Column="0">
                                <TextBlock Text="Точность (ε):" FontSize="16" Margin="0,0,0,5"/>
                                <TextBox x:Name="TextBoxEpsilon" Style="{StaticResource InputTextBoxStyle}" Text="0.0001"/>
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="2">
                                <TextBlock Text="Шаг спуска:" FontSize="16" Margin="0,0,0,5"/>
                                <TextBox x:Name="TextBoxStepSize" Style="{StaticResource InputTextBoxStyle}" Text="0.1"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,10,0,0">
                                <TextBlock Text="Макс. итераций:" FontSize="16" Margin="0,0,0,5"/>
                                <TextBox x:Name="TextBoxMaxIterations" Style="{StaticResource InputTextBoxStyle}" Text="1000"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <!-- Кнопка расчета -->
                    <!-- ВАЖНО: добавить x:Name="CalculateButton" -->
                    <Button
                        x:Name="CalculateButton"
                        Style="{StaticResource ActionButtonStyle}"
                        Click="CalculateButton_Click"
                        Content="Найти минимум"
                        Margin="0,0,0,30" />

                    <!-- Результат -->
                    <Border
                        Background="#E8F4F8"
                        CornerRadius="8"
                        Padding="15"
                        BorderBrush="#AED6F1"
                        BorderThickness="1">
                        <StackPanel>
                            <TextBlock 
                                Style="{StaticResource LabelStyle}" 
                                Text="Результаты:"
                                Foreground="#2980B9" />
                            <TextBox
                                x:Name="ResultTextBlock"
                                Style="{StaticResource ResultTextBoxStyle}"
                                Text=""
                                TextWrapping="Wrap"
                                Height="120"
                                VerticalScrollBarVisibility="Auto"
                                Margin="0,10,0,0" />
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>

        </Border>

        <!-- Правая панель - График и информация -->
        <Border
            Grid.Column="1"
            Margin="15"
            Background="White"
            CornerRadius="12"
            BorderBrush="#E0E0E0"
            BorderThickness="1">

            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="20"
                    Opacity="0.1"
                    ShadowDepth="3"
                    Direction="270" />
            </Border.Effect>

            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="21.6" />
                    <RowDefinition Height="Auto"/>
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Заголовок графика -->
                <TextBlock
                    Grid.Row="0"
                    Style="{StaticResource TitleStyle}"
                    Text="График функции"
                    Margin="0,0,0,15" Grid.RowSpan="2" />

                <TextBlock x:Name="ProgressTextBlock" 
               Text="" 
               FontSize="14"
               Foreground="#8B5A00"/>

                <!-- Сам график -->
                <Border
                    Grid.Row="2"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="8">
                    <oxyPlot:PlotView x:Name="PlotView" Background="White"/>
                </Border>

                <!-- Кнопка назад -->
                <Button
                        x:Name="BackButton"
                        Style="{StaticResource BackButtonStyle}"
                        Click="BackButton_Click" 
                        Content="Назад"
                        HorizontalAlignment="Right"
                        Margin="0,15,0,0" Width="120" Grid.RowSpan="2" />

            </Grid>

        </Border>

    </Grid>
</Page>