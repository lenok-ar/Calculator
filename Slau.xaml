<Page
    x:Class="Calculator.page.Slau"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Calculator.page"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wf="clr-namespace:System.Windows.Forms.DataVisualization.Charting;assembly=System.Windows.Forms.DataVisualization"
    Title="Slau"
    d:DesignHeight="700"
    d:DesignWidth="1200"
    mc:Ignorable="d">

    <Page.Resources>
        <Style x:Key="CardTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="#333" />
        </Style>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#38E156" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Height" Value="36" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Padding" Value="15,0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                CornerRadius="8"
                                Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2CC952" />
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="8" ShadowDepth="0" Color="#30000000" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1EBF46" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#6C757D" />
            <Setter Property="Foreground" Value="White" />
        </Style>

        <Style x:Key="DataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="#FFFFFF" />
            <Setter Property="BorderBrush" Value="#E1E8F2" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="GridLinesVisibility" Value="Horizontal" />
            <Setter Property="RowHeaderWidth" Value="40" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="AutoGenerateColumns" Value="False" />
            <Setter Property="CanUserAddRows" Value="False" />
            <Setter Property="CanUserDeleteRows" Value="False" />
        </Style>

        <Style x:Key="CheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#333333" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="5,3" />
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#E1E8F2" />
            <Setter Property="Background" Value="#FFFFFF" />
            <Setter Property="Foreground" Value="#333333" />
            <Setter Property="Padding" Value="8,6" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Height" Value="32" />
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1.5*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <!-- Левая панель - управление данными -->
        <Border Grid.Column="0" Margin="10" Background="#FFF" CornerRadius="15">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" Opacity="0.3" ShadowDepth="1" />
            </Border.Effect>

            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Button Grid.Row="0" Content="← Назад в меню" 
                        Click="HandleBackToMenu"
                        Style="{StaticResource SecondaryButton}"
                        Margin="0,0,0,15" />

                <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Style="{StaticResource CardTextStyle}" Text="Размер матрицы: " />
                    <ComboBox x:Name="MatrixSizeComboBox" Width="80" Margin="10,0,0,0">
                        <ComboBoxItem Content="2x2" IsSelected="True" />
                        <ComboBoxItem Content="3x3" />
                        <ComboBoxItem Content="4x4" />
                        <ComboBoxItem Content="5x5" />
                        <ComboBoxItem Content="6x6" />
                        <ComboBoxItem Content="7x7" />
                        <ComboBoxItem Content="8x8" />
                        <ComboBoxItem Content="9x9" />
                        <ComboBoxItem Content="10x10" />
                    </ComboBox>
                </StackPanel>

                <TextBlock Grid.Row="2" Text="Импорт данных:" 
                          Style="{StaticResource CardTextStyle}" 
                          Margin="0,20,0,10" />

                <StackPanel Grid.Row="3">
                    <Button Content="Импорт из Excel" 
                            Click="HandleImportFromExcel"
                            Style="{StaticResource ModernButton}"
                            Margin="0,5" />
                    <Button Content="Импорт из Google Sheets" 
                            Click="HandleImportFromGoogleSheets"
                            Style="{StaticResource ModernButton}"
                            Margin="0,5" />
                </StackPanel>

                <TextBlock Grid.Row="4" Text="Генерация данных:" 
                          Style="{StaticResource CardTextStyle}" 
                          Margin="0,20,0,10" />

                <Grid Grid.Row="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="От:" VerticalAlignment="Center" Width="40" />
                        <TextBox x:Name="txtMinValue" Text="-10" Style="{StaticResource TextBoxStyle}" Width="80" />
                        <TextBlock Text="До:" VerticalAlignment="Center" Width="40" Margin="10,0,0,0" />
                        <TextBox x:Name="txtMaxValue" Text="10" Style="{StaticResource TextBoxStyle}" Width="80" />
                    </StackPanel>

                    <Button Grid.Row="1" Content="Сгенерировать данные" 
                            Click="HandleGenerateData"
                            Style="{StaticResource ModernButton}"
                            Margin="0,5" />

                    <Button Grid.Row="2" Content="Очистить всё" 
                            Click="HandleClearData"
                            Style="{StaticResource SecondaryButton}"
                            Margin="0,5" Background="#E74C3C" />
                </Grid>

                <Border Grid.Row="7" BorderBrush="#FFCC00" BorderThickness="1"
                        Background="#FFFEF0" CornerRadius="4" Padding="10"
                        x:Name="StatusBorder" Visibility="Collapsed">
                    <TextBlock x:Name="StatusTextBlock" TextWrapping="Wrap" Foreground="#333" FontSize="12" />
                </Border>
            </Grid>
        </Border>

        <!-- Центральная панель - матрицы и данные -->
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="10" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Матрица A -->
            <Border Grid.Row="0" Background="#FFF" CornerRadius="15">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" Opacity="0.3" ShadowDepth="1" />
                </Border.Effect>

                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Матрица A" 
                              Style="{StaticResource CardTextStyle}" 
                              Margin="0,0,0,10" />

                    <DataGrid x:Name="MatrixADataGrid" Grid.Row="1"
                             Style="{StaticResource DataGridStyle}"
                             LoadingRow="DataGrid_LoadingRow" />
                </Grid>
            </Border>

            <!-- Вектор B -->
            <Border Grid.Row="2" Background="#FFF" CornerRadius="15">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" Opacity="0.3" ShadowDepth="1" />
                </Border.Effect>

                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Вектор свободных членов B" 
                              Style="{StaticResource CardTextStyle}" 
                              Margin="0,0,0,10" />

                    <DataGrid x:Name="VectorBDataGrid" Grid.Row="1"
                             Style="{StaticResource DataGridStyle}"
                             LoadingRow="DataGrid_LoadingRow" />
                </Grid>
            </Border>
        </Grid>

        <!-- Правая панель - методы и результаты -->
        <Border Grid.Column="2" Margin="10" Background="#FFF" CornerRadius="15">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" Opacity="0.3" ShadowDepth="1" />
            </Border.Effect>

            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Выбор методов:" 
                          Style="{StaticResource CardTextStyle}" 
                          Margin="0,0,0,10" />

                <StackPanel Grid.Row="1">
                    <CheckBox x:Name="chkGauss" Content="Метод Гаусса" Style="{StaticResource CheckBoxStyle}" IsChecked="True" />
                    <CheckBox x:Name="chkJordanGauss" Content="Метод Жордана-Гаусса" Style="{StaticResource CheckBoxStyle}" IsChecked="True" />
                    <CheckBox x:Name="chkCramer" Content="Метод Крамера" Style="{StaticResource CheckBoxStyle}" IsChecked="True" />
                </StackPanel>

                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,15,0,10">
                    <Button Content="Выбрать все" Click="HandleSelectAllMethods"
                            Style="{StaticResource SecondaryButton}" Width="100" />
                    <Button Content="Снять все" Click="HandleDeselectAllMethods"
                            Style="{StaticResource SecondaryButton}" Width="100" Margin="10,0,0,0" />
                </StackPanel>

                <Button Grid.Row="3" Content="Выполнить все выбранные" 
                        Click="HandleSolveAllSelectedMethods"
                        Style="{StaticResource ModernButton}"
                        Margin="0,10" />

                <TextBlock Grid.Row="4" Text="Результат (Вектор X):" 
                          Style="{StaticResource CardTextStyle}" 
                          Margin="0,10,0,10" />

                <DataGrid x:Name="SolutionDataGrid" Grid.Row="5"
                         Style="{StaticResource DataGridStyle}"
                         Height="130"
                         IsReadOnly="True" />

                <TextBox Grid.Row="6" x:Name="ExecutionTimeTextBox"
                        Style="{StaticResource TextBoxStyle}"
                        Height="100"
                        TextWrapping="Wrap"
                        VerticalScrollBarVisibility="Auto"
                        FontFamily="Consolas"
                        FontSize="11"
                        IsReadOnly="True"
                        Background="#F8F9FA"
                        Margin="0,5,0,0" TextChanged="ExecutionTimeTextBox_TextChanged_1" />
            </Grid>
        </Border>
    </Grid>
</Page>