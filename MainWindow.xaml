<Window x:Class="MyProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:MyProject"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wf="clr-namespace:System.Windows.Forms.DataVisualization.Charting;assembly=System.Windows.Forms.DataVisualization"
        Title="MainWindow"
        Width="800"
        Height="540"
        ResizeMode="CanMinimize"
        mc:Ignorable="d">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#F9F9F9" Offset="0" />
            <GradientStop Color="#CDFFC4" Offset="1" />
        </LinearGradientBrush>
    </Window.Background>

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Background" Value="#fff" />
            <Setter Property="BorderThickness" Value="0.5" />
            <Setter Property="BorderBrush" Value="#222" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Opacity="0." ShadowDepth="0" />
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="8">
                            <ContentPresenter
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            TextBlock.Foreground="#111" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="55" />
            <RowDefinition Height="445" />
        </Grid.RowDefinitions>

        <Border
            Grid.RowSpan="1"
            Width="780"
            Height="55">
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="10"
                    Direction="277"
                    Opacity="0.2"
                    Color="#000" />
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" >
                <TextBlock TextAlignment="Center">
                    Метод<LineBreak/>Дихотомии
                </TextBlock>
                </Button>
                <Button Grid.Column="1" />
                <Button Grid.Column="2" />
                <Button Grid.Column="3" />
                <Button Grid.Column="4" />
                <Button Grid.Column="5" />
                <Button Grid.Column="6" />
                <Button Grid.Column="7" />

            </Grid>

        </Border>

        <Grid
            Grid.RowSpan="2"
            Height="404"
            Margin="0,40,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="275" />
                <ColumnDefinition Width="505" />
            </Grid.ColumnDefinitions>

            <Border
                Grid.ColumnSpan="1"
                Width="250"
                Height="400"
                Background="#FFF"
                CornerRadius="15">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="15"
                        Direction="277"
                        Opacity="0.2" />
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>

                    <StackPanel
                        Grid.Row="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock
                            FontFamily="Segoe UI"
                            FontSize="26"
                            FontWeight="Bold"
                            Text="F = " />
                        <TextBox
                            Width="150"
                            Padding="5,0,0,0"
                            FontFamily="Segoe UI"
                            FontSize="22"
                            TextChanged="TextBox_TextChanged_f" />
                    </StackPanel>

                    <StackPanel
                        Grid.Row="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock
                            FontFamily="Segoe UI"
                            FontSize="26"
                            FontWeight="Bold"
                            Text="a = " />
                        <TextBox
                            Width="150"
                            Padding="5,0,0,0"
                            FontFamily="Segoe UI"
                            FontSize="22"
                            Tag="inputA"
                            TextChanged="TextBox_TextChanged" />
                    </StackPanel>

                    <StackPanel
                        Grid.Row="2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock
                            FontFamily="Segoe UI"
                            FontSize="26"
                            FontWeight="Bold"
                            Text="b = " />
                        <TextBox
                            Width="150"
                            Padding="5,0,0,0"
                            FontFamily="Segoe UI"
                            FontSize="22"
                            Tag="inputB"
                            TextChanged="TextBox_TextChanged" />
                    </StackPanel>

                    <StackPanel
                        Grid.Row="3"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock
                            FontFamily="Segoe UI"
                            FontSize="26"
                            FontWeight="Bold"
                            Text="E = " />
                        <TextBox
                            Width="150"
                            Padding="5,0,0,0"
                            FontFamily="Segoe UI"
                            FontSize="22"
                            Tag="inputE"
                            TextChanged="TextBox_TextChanged" />
                    </StackPanel>

                    <StackPanel
                         Grid.Row="4"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         Orientation="Horizontal">
                        <TextBlock
                            FontFamily="Segoe UI"
                            FontSize="26"
                            FontWeight="Bold"
                            Text="x = " />
                        <TextBox
                            Width="150"
                            Padding="5,0,0,0"
                            FontFamily="Segoe UI"
                            FontSize="22"
                            IsReadOnly="True"
                            x:Name="inputRoot"/>
                    </StackPanel>

                    <Button
                        Grid.Row="5"
                        Margin="10"
                        Background="#FFF"
                        BorderBrush="#5BDB33"
                        BorderThickness="2"
                        Click="Button_Click"
                        Content="Рассчитать"
                        FontFamily="Segoe UI"
                        FontSize="24"
                        FontWeight="Bold" />

                    <Button
                        Grid.Row="6"
                        Margin="10"
                        Background="#FFF"
                        BorderBrush="#5BDB33"
                        BorderThickness="2"
                        Click="Button1_Click"
                        Content="Очистить"
                        FontFamily="Segoe UI"
                        FontSize="24"
                        FontWeight="Bold" />
                </Grid>
            </Border>

            <Border
                Grid.Column="2"
                Width="475"
                Height="400"
                Background="#FFF"
                CornerRadius="15">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="15"
                        Direction="277"
                        Opacity="0.2" />
                </Border.Effect>

                <Grid Margin="20">
                    <WindowsFormsHost>
                        <wf:Chart x:Name="ChartLine">
                            <wf:Chart.Series>
                                <wf:Series ChartType="Line" />
                            </wf:Chart.Series>
                            <wf:Chart.ChartAreas>
                                <wf:ChartArea />
                            </wf:Chart.ChartAreas>
                        </wf:Chart>
                    </WindowsFormsHost>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
