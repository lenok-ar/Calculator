 <Window x:Class="Calculator.SortingAlgorithms"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Алгоритмы сортировки - Лабораторная работа №4" 
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA">

    <Window.Resources>
        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="#2C3E50" />
        </Style>

        <Style x:Key="SubtitleStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="#34495E" />
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="#34495E" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Height" Value="30" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Background" Value="#FFFFFF" />
            <Setter Property="BorderBrush" Value="#BDC3C7" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#3498DB" />
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#2980B9" />
                    <Setter Property="BorderThickness" Value="2" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="6">
                            <ContentPresenter 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"
                                Margin="10,5"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2980B9" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1F618D" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MenuStyle" TargetType="Menu">
            <Setter Property="Background" Value="#3498DB" />
            <Setter Property="Height" Value="30" />
        </Style>

        <Style x:Key="MenuItemStyle" TargetType="MenuItem">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Background" Value="Transparent" />
        </Style>

        <Style x:Key="GroupBoxStyle" TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="#E0E0E0" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Background" Value="White" />
            <Setter Property="Foreground" Value="#2C3E50" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,5" />
            <Setter Property="Padding" Value="10" />
        </Style>

        <Style x:Key="CheckBoxStyle" TargetType="CheckBox">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="#34495E" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="10,0" />
        </Style>

        <Style x:Key="RadioButtonStyle" TargetType="RadioButton">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="#34495E" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="10,0" />
        </Style>

        <Style x:Key="VisualizationBorderStyle" TargetType="Border">
            <Setter Property="Margin" Value="0,5" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="#E0E0E0" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="6" />
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Меню -->
        <Menu Grid.Row="0" Style="{StaticResource MenuStyle}">
            <MenuItem Header="Файл" Style="{StaticResource MenuItemStyle}">
                <MenuItem Header="Импорт из Excel" Style="{StaticResource MenuItemStyle}" Click="ImportFromExcelMenuItem_Click"/>
                <MenuItem Header="Импорт из Google Table" Style="{StaticResource MenuItemStyle}" Click="ImportFromGoogleSheetsMenuItem_Click"/>
                <Separator/>
                <MenuItem Header="Очистить" Style="{StaticResource MenuItemStyle}" Click="ClearDataMenuItem_Click"/>
                <MenuItem Header="Выход" Style="{StaticResource MenuItemStyle}" Click="ExitMenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="Данные" Style="{StaticResource MenuItemStyle}">
                <MenuItem Header="Сгенерировать случайные данные" Style="{StaticResource MenuItemStyle}" Click="GenerateRandomDataMenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="Настройки" Style="{StaticResource MenuItemStyle}">
                <MenuItem Header="Настройка BOGO сортировки" Style="{StaticResource MenuItemStyle}" 
                          Click="ConfigureBogoMenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="Справка" Style="{StaticResource MenuItemStyle}">
                <MenuItem Header="О программе" Style="{StaticResource MenuItemStyle}"/>
            </MenuItem>
        </Menu>

        <!-- Заголовок -->
        <Border Grid.Row="1" 
                Background="White"
                CornerRadius="8"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                Padding="15"
                Margin="0,15,0,10">
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="15"
                    Opacity="0.1"
                    ShadowDepth="2"
                    Direction="270" />
            </Border.Effect>
            <TextBlock Style="{StaticResource TitleStyle}" 
                       Text="Сравнение алгоритмов сортировки" 
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Блок 1: Размер массива и выбор сортировок -->
        <GroupBox Grid.Row="2" 
                  Header="Настройки сортировки" 
                  Style="{StaticResource GroupBoxStyle}">
            <StackPanel Orientation="Horizontal" Margin="5">
                <!-- Размер массива -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Размер массива:" 
                               Style="{StaticResource LabelStyle}"
                               Margin="0,0,10,0"/>
                    <TextBox Name="ArraySizeTextBox" 
                             Text="10" 
                             Width="50" 
                             Style="{StaticResource InputTextBoxStyle}"/>
                    <Button Content="Обновить" 
                            Click="UpdateArraySizeButton_Click" 
                            Margin="10,0,0,0" 
                            Padding="10,5" 
                            Style="{StaticResource ButtonStyle}"
                            Background="#3498DB"/>
                </StackPanel>

                <!-- Выбор алгоритмов -->
                <StackPanel Orientation="Horizontal" 
                            Margin="30,0,0,0" 
                            VerticalAlignment="Center">
                    <CheckBox Name="BubbleSortCheckBox" 
                              Content="Пузырьковая" 
                              Style="{StaticResource CheckBoxStyle}"/>
                    <CheckBox Name="InsertionSortCheckBox" 
                              Content="Вставками" 
                              Style="{StaticResource CheckBoxStyle}"/>
                    <CheckBox Name="ShakerSortCheckBox" 
                              Content="Шейкерная" 
                              Style="{StaticResource CheckBoxStyle}"/>
                    <CheckBox Name="QuickSortCheckBox" 
                              Content="Быстрая" 
                              Style="{StaticResource CheckBoxStyle}"/>
                    <CheckBox Name="BogoSortCheckBox" 
                              Content="BOGO" 
                              Style="{StaticResource CheckBoxStyle}"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Блок 2: Направление сортировки и кнопка -->
        <GroupBox Grid.Row="3" 
                  Header="Параметры выполнения" 
                  Style="{StaticResource GroupBoxStyle}">
            <StackPanel Orientation="Horizontal" Margin="5">
                <!-- Направление сортировки -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Направление:" 
                               Style="{StaticResource LabelStyle}"
                               Margin="0,0,10,0"/>
                    <RadioButton Name="AscendingRadio" 
                                 Content="По возрастанию" 
                                 GroupName="SortOrder" 
                                 IsChecked="True" 
                                 Style="{StaticResource RadioButtonStyle}"/>
                    <RadioButton Name="DescendingRadio" 
                                 Content="По убыванию" 
                                 GroupName="SortOrder" 
                                 Style="{StaticResource RadioButtonStyle}"/>
                </StackPanel>

                <!-- Кнопка запуска -->
                <Button Content="Запустить сортировку" 
                        Margin="50,0,0,0" 
                        Padding="20,8" 
                        Style="{StaticResource ButtonStyle}"
                        Background="#3498DB"
                        VerticalAlignment="Center" 
                        Click="StartSortingButton_Click"/>
            </StackPanel>
        </GroupBox>

        <!-- Область данных -->
        <Border Grid.Row="4" 
                Background="White"
                CornerRadius="8"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                Padding="10"
                Margin="0,10,0,0">
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="15"
                    Opacity="0.1"
                    ShadowDepth="2"
                    Direction="270" />
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Исходные данные -->
                <Border Grid.Column="0" 
                        Margin="5" 
                        Padding="10"
                        Background="#F8F9FA"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        CornerRadius="6">
                    <StackPanel>
                        <TextBlock Text="Исходный массив:" 
                                   Style="{StaticResource SubtitleStyle}" 
                                   Margin="0,0,0,10"/>
                        <Border BorderBrush="#E0E0E0" 
                                BorderThickness="1"
                                CornerRadius="4">
                            <DataGrid Name="InputDataGrid" 
                                     AutoGenerateColumns="False" 
                                     Height="371" 
                                     CanUserAddRows="True"
                                     GridLinesVisibility="Horizontal"
                                     BorderThickness="0">
                                <DataGrid.CellStyle>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Setter Property="Padding" Value="5" />
                                    </Style>
                                </DataGrid.CellStyle>
                            </DataGrid>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Визуализация -->
                <Border Grid.Column="1" 
                        Margin="5" 
                        Padding="10"
                        Background="#F8F9FA"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        CornerRadius="6">
                    <StackPanel>
                        <TextBlock Text="Визуализация процессов:" 
                                   Style="{StaticResource SubtitleStyle}" 
                                   Margin="0,0,0,10"/>
                        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                      MaxHeight="350">
                            <StackPanel Name="VisualizationPanel">
                                <Border Style="{StaticResource VisualizationBorderStyle}">
                                    <StackPanel>
                                        <TextBlock Text="Пузырьковая сортировка" 
                                                   Style="{StaticResource SubtitleStyle}" 
                                                   Margin="0,0,0,5"/>
                                        <Canvas Name="BubbleSortCanvas" 
                                                Height="80" 
                                                Background="White"/>
                                    </StackPanel>
                                </Border>
                                <Border Style="{StaticResource VisualizationBorderStyle}">
                                    <StackPanel>
                                        <TextBlock Text="Быстрая сортировка" 
                                                   Style="{StaticResource SubtitleStyle}" 
                                                   Margin="0,0,0,5"/>
                                        <Canvas Name="QuickSortCanvas" 
                                                Height="80" 
                                                Background="White"/>
                                    </StackPanel>
                                </Border>
                                <Border Style="{StaticResource VisualizationBorderStyle}">
                                    <StackPanel>
                                        <TextBlock Text="Сортировка вставками" 
                                                   Style="{StaticResource SubtitleStyle}" 
                                                   Margin="0,0,0,5"/>
                                        <Canvas Name="InsertSortCanvas" 
                                                Height="80" 
                                                Background="White"/>
                                    </StackPanel>
                                </Border>
                                <Border Style="{StaticResource VisualizationBorderStyle}">
                                    <StackPanel>
                                        <TextBlock Text="Шейкерная сортировка" 
                                                   Style="{StaticResource SubtitleStyle}" 
                                                   Margin="0,0,0,5"/>
                                        <Canvas Name="ShakerSortCanvas" 
                                                Height="80" 
                                                Background="White"/>
                                    </StackPanel>
                                </Border>
                                <Border Style="{StaticResource VisualizationBorderStyle}">
                                    <StackPanel>
                                        <TextBlock Text="BOGO сортировка" 
                                                   Style="{StaticResource SubtitleStyle}" 
                                                   Margin="0,0,0,5"/>
                                        <Canvas Name="BogoSortCanvas" 
                                                Height="80" 
                                                Background="White"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Время выполнения -->
        <Border Grid.Row="5" 
                Background="White"
                CornerRadius="8"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                Padding="15"
                Margin="0,10,0,0">
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="15"
                    Opacity="0.1"
                    ShadowDepth="2"
                    Direction="270" />
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="Время выполнения алгоритмов:" 
                           Style="{StaticResource SubtitleStyle}" 
                           Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            Margin="0,0,0,15">
                    <TextBlock Name="BubbleSortTime" 
                               Text="Пузырьковая: - " 
                               Style="{StaticResource LabelStyle}"
                               Margin="15,2"/>
                    <TextBlock Name="InsertionSortTime" 
                               Text="Вставками: - " 
                               Style="{StaticResource LabelStyle}"
                               Margin="15,2"/>
                    <TextBlock Name="ShakerSortTime" 
                               Text="Шейкерная: - " 
                               Style="{StaticResource LabelStyle}"
                               Margin="15,2"/>
                    <TextBlock Name="QuickSortTime" 
                               Text="Быстрая: - " 
                               Style="{StaticResource LabelStyle}"
                               Margin="15,2"/>
                    <TextBlock Name="BogoSortTime" 
                               Text="BOGO: - " 
                               Style="{StaticResource LabelStyle}"
                               Margin="15,2"/>
                </StackPanel>

                <!-- Блок для итераций -->
                <TextBlock Text="Количество итераций:" 
                           Style="{StaticResource SubtitleStyle}" 
                           Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center">
                    <TextBlock Name="BubbleSortIterations" 
                               Text="Пузырьковая: 0 " 
                               Style="{StaticResource LabelStyle}"
                               Margin="15,2"/>
                    <TextBlock Name="InsertionSortIterations" 
                               Text="Вставками: 0 " 
                               Style="{StaticResource LabelStyle}"
                               Margin="15,2"/>
                    <TextBlock Name="ShakerSortIterations" 
                               Text="Шейкерная: 0 " 
                               Style="{StaticResource LabelStyle}"
                               Margin="15,2"/>
                    <TextBlock Name="QuickSortIterations" 
                               Text="Быстрая: 0 " 
                               Style="{StaticResource LabelStyle}"
                               Margin="15,2"/>
                    <TextBlock Name="BogoSortIterations" 
                               Text="BOGO: 0 " 
                               Style="{StaticResource LabelStyle}"
                               Margin="15,2"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>