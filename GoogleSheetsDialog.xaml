<Window x:Class="Calculator.GoogleSheetsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Загрузка из Google Sheets"
        Width="500" 
        Height="350"
        WindowStartupLocation="CenterOwner"
        Background="#F5F7FA">

    <Window.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2C5F9E" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Width" Value="80" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                CornerRadius="4"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3A6DB0" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Введите ссылку на Google Sheets таблицу:"
                   FontWeight="SemiBold"
                   FontSize="14"
                   Margin="0,0,0,10"/>

        <TextBox x:Name="txtUrl"
                 Grid.Row="1"
                 VerticalScrollBarVisibility="Auto"
                 AcceptsReturn="False"
                 FontFamily="Segoe UI"
                 FontSize="12"
                 Height="80"
                 Padding="10"
                 TextWrapping="Wrap"
                 BorderBrush="#E1E8F2"
                 BorderThickness="1"/>

        <TextBlock Grid.Row="2"
                   Text="Примеры ссылок:"
                   FontWeight="SemiBold"
                   FontSize="13"
                   Margin="0,15,0,5"/>

        <StackPanel Grid.Row="3" Margin="0,0,0,15">
            <TextBlock Text="• https://docs.google.com/spreadsheets/d/ABC123xyz/edit"
                       FontSize="11"
                       Foreground="Gray"
                       TextWrapping="Wrap"
                       Margin="0,2,0,0"/>
            <TextBlock Text="• https://docs.google.com/spreadsheets/d/ABC123xyz"
                       FontSize="11"
                       Foreground="Gray"
                       TextWrapping="Wrap"
                       Margin="0,2,0,0"/>
            <TextBlock Text="• https://docs.google.com/spreadsheets/d/ABC123xyz/edit?usp=sharing"
                       FontSize="11"
                       Foreground="Gray"
                       TextWrapping="Wrap"
                       Margin="0,2,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button Content="Отмена"
                    Style="{StaticResource ButtonStyle}"
                    Background="#95A5A6"
                    Click="Cancel_Click"/>
            <Button Content="Загрузить"
                    Style="{StaticResource ButtonStyle}"
                    Background="DodgerBlue"
                    Margin="5,0,0,0"
                    Click="Load_Click"/>
        </StackPanel>
    </Grid>
</Window>