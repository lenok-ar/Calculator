
    <Page x:Class="Calculator.LeastSquaresPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:oxyPlot="clr-namespace:OxyPlot.Wpf;assembly=OxyPlot.Wpf"
      Title="Метод наименьших квадратов" 
      Height="700" 
      Width="1100">

    <Page.Resources>
        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="24" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="#2C3E50" />
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="#34495E" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,0,10,0" />
        </Style>

        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Height" Value="35" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Background" Value="#FFFFFF" />
            <Setter Property="BorderBrush" Value="#BDC3C7" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Padding" Value="8,5" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#3498DB" />
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#2980B9" />
                    <Setter Property="BorderThickness" Value="3" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ResultTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource InputTextBoxStyle}">
            <Setter Property="Background" Value="#F8F9FA" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="Foreground" Value="#2C3E50" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="40" />
            <Setter Property="Margin" Value="0,0,10,0" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Background" Value="#3498DB" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="6">
                            <ContentPresenter 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"
                                Margin="10,5"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2980B9" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1F618D" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BackButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#95A5A6" />
            <Setter Property="Width" Value="120" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7F8C8D" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#616A6B" />
                </Trigger>
            </Style.Triggers>
        </Style>

    </Page.Resources>

    <Grid Background="#F5F7FA">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="450" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Левая панель - Ввод данных и управление -->
        <Border
            Grid.Column="0"
            Margin="15"
            Background="White"
            CornerRadius="12"
            BorderBrush="#E0E0E0"
            BorderThickness="1">

            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="20"
                    Opacity="0.1"
                    ShadowDepth="3"
                    Direction="270" />
            </Border.Effect>

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="25">

                    <!-- Заголовок -->
                    <TextBlock
                        Style="{StaticResource TitleStyle}"
                        Text="Метод наименьших квадратов"
                        Margin="0,0,0,20" />

                    <!-- Управление данными -->
                    <Border
                        Background="#F8F9FA"
                        CornerRadius="8"
                        Padding="15"
                        BorderBrush="#BDC3C7"
                        BorderThickness="1"
                        Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock 
                                Style="{StaticResource LabelStyle}" 
                                Text="Управление данными:"
                                FontSize="16"
                                Margin="0,0,0,10" />

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <Button x:Name="LoadButton" Content="📊 Загрузить CSV" 
                                        Style="{StaticResource ActionButtonStyle}" Width="140"/>
                                <Button x:Name="ExportButton" Content="💾 Экспорт" 
                                        Style="{StaticResource ActionButtonStyle}" Width="100"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <Button x:Name="GenerateButton" Content="🔄 Сгенерировать" 
                                        Style="{StaticResource ActionButtonStyle}" Width="140"/>
                                <Button x:Name="ClearButton" Content="🗑️ Очистить" 
                                        Style="{StaticResource ActionButtonStyle}" Width="100"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Настройки генерации -->
                    <Border
                        Background="#F8F9FA"
                        CornerRadius="8"
                        Padding="15"
                        BorderBrush="#BDC3C7"
                        BorderThickness="1"
                        Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock 
                                Style="{StaticResource LabelStyle}" 
                                Text="Настройки генерации:"
                                FontSize="16"
                                Margin="0,0,0,10" />

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Количество точек:" 
                                          VerticalAlignment="Center" Margin="0,0,10,5"/>
                                <TextBox Grid.Row="0" Grid.Column="1" x:Name="PointsCountTextBox" 
                                        Style="{StaticResource InputTextBoxStyle}" Text="10"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="X от:" 
                                          VerticalAlignment="Center" Margin="0,0,10,5"/>
                                <TextBox Grid.Row="1" Grid.Column="1" x:Name="MinXTextBox" 
                                        Style="{StaticResource InputTextBoxStyle}" Text="0"/>
                                <TextBlock Grid.Row="1" Grid.Column="2" Text="до" 
                                          VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBox Grid.Row="1" Grid.Column="3" x:Name="MaxXTextBox" 
                                        Style="{StaticResource InputTextBoxStyle}" Text="10"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Y базовое от:" 
                                          VerticalAlignment="Center" Margin="0,0,10,5"/>
                                <TextBox Grid.Row="2" Grid.Column="1" x:Name="MinYBaseTextBox" 
                                        Style="{StaticResource InputTextBoxStyle}" Text="0"/>
                                <TextBlock Grid.Row="2" Grid.Column="2" Text="до" 
                                          VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBox Grid.Row="2" Grid.Column="3" x:Name="MaxYBaseTextBox" 
                                        Style="{StaticResource InputTextBoxStyle}" Text="10"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Уровень шума:" 
                                          VerticalAlignment="Center" Margin="0,0,10,5"/>
                                <TextBox Grid.Row="3" Grid.Column="1" x:Name="NoiseLevelTextBox" 
                                        Style="{StaticResource InputTextBoxStyle}" Text="1.0"/>

                                <CheckBox Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="4" 
                                         x:Name="RandomizeCheckBox" Content="Случайное распределение X"
                                         IsChecked="True" Margin="0,10,0,0" FontSize="14"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Кнопка расчета -->
                    <Button
                        x:Name="CalculateButton"
                        Style="{StaticResource ActionButtonStyle}"
                        Content="📈 Рассчитать МНК"
                        Height="45"
                        FontSize="18"
                        Margin="0,0,0,20" />

                    <!-- Результаты -->
                    <Border
                        Background="#E8F4F8"
                        CornerRadius="8"
                        Padding="15"
                        BorderBrush="#AED6F1"
                        BorderThickness="1">
                        <StackPanel>
                            <TextBlock 
                                Style="{StaticResource LabelStyle}" 
                                Text="Результаты аппроксимации:"
                                Foreground="#2980B9"
                                Margin="0,0,0,10" />

                            <!-- Линейная аппроксимация -->
                            <Border
                                Background="White"
                                CornerRadius="6"
                                Padding="10"
                                BorderBrush="#3498DB"
                                BorderThickness="1"
                                Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock Text="Линейная (n=1):" 
                                              FontWeight="SemiBold" FontSize="14"/>
                                    <TextBlock x:Name="LinearResultText" Text="Не рассчитано"
                                              FontSize="13" Margin="0,5,0,0"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                        <TextBlock Text="R² = " FontSize="12"/>
                                        <TextBlock x:Name="LinearRSquaredText" Text="-" 
                                                  FontSize="12" FontWeight="SemiBold"
                                                  Foreground="#27AE60"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- Квадратичная аппроксимация -->
                            <Border
                                Background="White"
                                CornerRadius="6"
                                Padding="10"
                                BorderBrush="#27AE60"
                                BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="Квадратичная (n=2):" 
                                              FontWeight="SemiBold" FontSize="14"/>
                                    <TextBlock x:Name="QuadraticResultText" Text="Не рассчитано"
                                              FontSize="13" Margin="0,5,0,0"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                        <TextBlock Text="R² = " FontSize="12"/>
                                        <TextBlock x:Name="QuadraticRSquaredText" Text="-" 
                                                  FontSize="12" FontWeight="SemiBold"
                                                  Foreground="#27AE60"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Управление отображением -->
                    <Border
                        Background="#FFF9E6"
                        CornerRadius="8"
                        Padding="15"
                        BorderBrush="#FFD966"
                        BorderThickness="1"
                        Margin="0,20,0,0">
                        <StackPanel>
                            <TextBlock 
                                Text="Отображение на графике:"
                                FontWeight="SemiBold" FontSize="14"
                                Margin="0,0,0,5"/>

                            <StackPanel Orientation="Horizontal">
                                <CheckBox x:Name="ShowPointsCheckBox" Content="Точки" 
                                         IsChecked="True" Margin="0,0,15,0" FontSize="13"/>
                                <CheckBox x:Name="ShowLinearCheckBox" Content="Линейная" 
                                         IsChecked="True" Margin="0,0,15,0" FontSize="13"/>
                                <CheckBox x:Name="ShowQuadraticCheckBox" Content="Квадратичная" 
                                         IsChecked="True" FontSize="13"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Правая панель - График и таблица -->
        <Border
            Grid.Column="1"
            Margin="15"
            Background="White"
            CornerRadius="12"
            BorderBrush="#E0E0E0"
            BorderThickness="1">

            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="20"
                    Opacity="0.1"
                    ShadowDepth="3"
                    Direction="270" />
            </Border.Effect>

            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <TextBlock
                    Grid.Row="0"
                    Style="{StaticResource TitleStyle}"
                    Text="График аппроксимации"
                    Margin="0,0,0,15" />

                <!-- График -->
                <Border
                    Grid.Row="1"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="8"
                    Margin="0,0,0,15">
                    <oxyPlot:PlotView x:Name="PlotView" Background="White"/>
                </Border>

                <!-- Кнопка назад -->
                <Button Grid.Row="2"
                        x:Name="BackButton"
                        Style="{StaticResource BackButtonStyle}"
                        Content="← Назад"
                        HorizontalAlignment="Right" />

            </Grid>
        </Border>

    </Grid>
</Page>