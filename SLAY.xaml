<Window x:Class="MyProject.SLAY"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyProject"
        mc:Ignorable="d"
        Title="SLAY" Height="450" Width="800">

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#F9F9F9" Offset="0" />
            <GradientStop Color="#CDFFC4" Offset="1" />
        </LinearGradientBrush>
    </Window.Background>

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="4" />
            <Setter Property="Background" Value="#fff" />
            <Setter Property="BorderThickness" Value="0.5" />
            <Setter Property="BorderBrush" Value="#222" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Opacity="0." ShadowDepth="0" />
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                     Background="{TemplateBinding Background}"
                     BorderBrush="{TemplateBinding BorderBrush}"
                     BorderThickness="{TemplateBinding BorderThickness}"
                     CornerRadius="8">
                            <ContentPresenter
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         TextBlock.Foreground="#111" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70" />
            <RowDefinition Height="430" />
        </Grid.RowDefinitions>
        <Border
             Grid.Row="0" Margin="10,2,10,2">
            <Border.Effect>
                <DropShadowEffect
                     BlurRadius="10"
                     Direction="277"
                     Opacity="0.2"
                     Color="#000" />
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Button 
                     Grid.Column="0" 
                     Click="Method_Dichotomy" >
                    <TextBlock TextAlignment="Center">
                         Метод<LineBreak/>Дихотомии
                    </TextBlock>
                </Button>

                <Button Grid.Column="1" 
                         Click="SLAY" >
                    <TextBlock TextAlignment="Center">
                        Метод<LineBreak/>решения<LineBreak/>СЛАУ
                    </TextBlock>
                </Button>

                <Button Grid.Column="2" />
                <Button Grid.Column="3" />
                <Button Grid.Column="4" />
                <Button Grid.Column="5" />
                <Button Grid.Column="6" />
                <Button Grid.Column="7" />

            </Grid>
        </Border>

        <StackPanel Grid.Row="1">
            <Grid
                Height="404"
                Margin="0,13,0,28">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />

                        </Grid.RowDefinitions>

                        <Button Grid.Row="0" 
                                Margin="7"
                                Content="Google Sheets"
                                FontFamily="Segoe UI"
                                FontSize="18"
                                FontWeight="Medium" />
                        <Button Grid.Row="1" 
                                Margin="7"
                                Content="Excel"
                                FontFamily="Segoe UI"
                                FontSize="18"
                                FontWeight="Medium" />
                        <Button Grid.Row="2" 
                                Margin="7"
                                Content="Ввести данные"
                                FontFamily="Segoe UI"
                                FontSize="18"
                                FontWeight="Medium" />
                        <Button Grid.Row="3" 
                                Margin="7"
                                Content="Заполнить автоматически"
                                FontFamily="Segoe UI"
                                FontSize="18"
                                FontWeight="Medium" />
                        <Button Grid.Row="4" 
                                Margin="7"
                                Content="Посмотреть данные"
                                FontFamily="Segoe UI"
                                FontSize="18"
                                FontWeight="Medium" />
                        <Button Grid.Row="5" 
                                Margin="7"
                                Content="Рассчитать"
                                FontFamily="Segoe UI"
                                FontSize="18"
                                FontWeight="Medium" />
                        <Button Grid.Row="6" 
                                Margin="7"
                                Content="Очистить"
                                FontFamily="Segoe UI"
                                FontSize="18"
                                FontWeight="Medium" />
                    </Grid>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                        </Grid.RowDefinitions>

                        <Button Grid.Row="0" 
                             Margin="7"
                             Content="Метод Гаусса"
                             FontFamily="Segoe UI"
                             FontSize="18"
                             FontWeight="Medium" />
                        <Button Grid.Row="1" 
                             Margin="7"
                             Content="Метод Жардана - Гаусса"
                             FontFamily="Segoe UI"
                             FontSize="18"
                             FontWeight="Medium" />
                        <Button Grid.Row="2" 
                             Margin="7"
                             Content="Метод Крамера"
                             FontFamily="Segoe UI"
                             FontSize="18"
                             FontWeight="Medium" />
                        <Button Grid.Row="3" 
                             Margin="7"
                             Content="Расчитать"
                             FontFamily="Segoe UI"
                             FontSize="18"
                             FontWeight="Medium" />
                    </Grid>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                        </Grid.RowDefinitions>

                        <Button Grid.Row="0" 
                            Margin="7"
                            Content="Посмотреть результат"
                            FontFamily="Segoe UI"
                            FontSize="18"
                            FontWeight="Medium" />
                        <Button Grid.Row="1" 
                            Margin="7"
                            Content="Google Sheets"
                            FontFamily="Segoe UI"
                            FontSize="18"
                            FontWeight="Medium" />
                        <Button Grid.Row="2" 
                            Margin="7"
                            Content="Excel"
                            FontFamily="Segoe UI"
                            FontSize="18"
                            FontWeight="Medium" />
                    </Grid>
                </StackPanel>

            </Grid>
        </StackPanel>

    </Grid>

</Window>
