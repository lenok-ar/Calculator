<Page
    x:Class="Calculator.Dichotomy"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Calculator"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wf="clr-namespace:System.Windows.Forms.DataVisualization.Charting;assembly=System.Windows.Forms.DataVisualization"
    Title="Метод дихотомии"
    d:DesignHeight="700"
    d:DesignWidth="1100"
    mc:Ignorable="d">

    <Page.Resources>
        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="24" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="#2C3E50" />
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="#34495E" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,0,10,0" />
        </Style>

        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Height" Value="40" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Background" Value="#FFFFFF" />
            <Setter Property="BorderBrush" Value="#BDC3C7" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#3498DB" />
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#2980B9" />
                    <Setter Property="BorderThickness" Value="3" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ResultTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource InputTextBoxStyle}">
            <Setter Property="Background" Value="#F8F9FA" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="Foreground" Value="#2C3E50" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="200" />
            <Setter Property="Height" Value="45" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Background" Value="#3498DB" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="8">
                            <ContentPresenter 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"
                                Margin="10,5"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2980B9" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1F618D" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BackButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#95A5A6" />
            <Setter Property="Width" Value="120" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7F8C8D" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#616A6B" />
                </Trigger>
            </Style.Triggers>
        </Style>

    </Page.Resources>

    <Grid Background="#F5F7FA">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Левая панель - Ввод данных -->
        <Border
            Grid.Column="0"
            Margin="15"
            Background="White"
            CornerRadius="12"
            BorderBrush="#E0E0E0"
            BorderThickness="1">

            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="20"
                    Opacity="0.1"
                    ShadowDepth="3"
                    Direction="270" />
            </Border.Effect>

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="25">

                    <!-- Заголовок -->
                    <TextBlock
                        Style="{StaticResource TitleStyle}"
                        Text="Метод дихотомии"
                        Margin="0,0,0,20" />

                    <!-- Кнопка назад -->
                    <Button
                        Style="{StaticResource BackButtonStyle}"
                        Click="HandleBackMenu"
                        Content="← Назад"
                        HorizontalAlignment="Left" />

                    <!-- Функция -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Style="{StaticResource LabelStyle}" Text="Функция f(x):" />
                        <TextBox
                            x:Name="functionTextBox"
                            Style="{StaticResource InputTextBoxStyle}"
                            TextChanged="TextBox_F"
                            ToolTip="Введите функцию, например: x^2 - 4, sin(x), exp(x)-2" />
                    </StackPanel>

                    <!-- Интервал -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Style="{StaticResource LabelStyle}" Text="Начало (a):" />
                            <TextBox
                                x:Name="aTextBox"
                                Style="{StaticResource InputTextBoxStyle}"
                                Tag="A"
                                TextChanged="TextBox_NumberChanged" />
                        </StackPanel>

                        <TextBlock 
                            Grid.Column="1" 
                            Text="–" 
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            FontSize="20"
                            FontWeight="Bold"
                            Foreground="#7F8C8D" />

                        <StackPanel Grid.Column="2">
                            <TextBlock Style="{StaticResource LabelStyle}" Text="Конец (b):" />
                            <TextBox
                                x:Name="bTextBox"
                                Style="{StaticResource InputTextBoxStyle}"
                                Tag="B"
                                TextChanged="TextBox_NumberChanged" />
                        </StackPanel>
                    </Grid>

                    <!-- Точность -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Style="{StaticResource LabelStyle}" Text="Точность (ε):" />
                        <TextBox
                            x:Name="eTextBox"
                            Style="{StaticResource InputTextBoxStyle}"
                            Tag="E"
                            TextChanged="TextBox_NumberChanged"
                            ToolTip="Например: 0.001, 0.0001" />
                    </StackPanel>

                    <!-- Кнопка расчета -->
                    <Button
                        Style="{StaticResource ActionButtonStyle}"
                        Click="HandleCalculate"
                        Content="Рассчитать корень"
                        Margin="0,0,0,30" />

                    <!-- Результат -->
                    <Border
    Background="#E8F4F8"
    CornerRadius="8"
    Padding="15"
    BorderBrush="#AED6F1"
    BorderThickness="1">
                        <StackPanel>
                            <TextBlock 
            Style="{StaticResource LabelStyle}" 
            Text="Найденный корень:"
            Foreground="#2980B9" />
                            <TextBox
            x:Name="inputRoot"
            Style="{StaticResource ResultTextBoxStyle}"
            Text=""
            TextAlignment="Center" 
            Margin="0,0,0,10"/>

                            <!-- Добавленный блок для полной информации -->
                            <TextBlock 
            Style="{StaticResource LabelStyle}" 
            Text="Подробная информация:"
            Foreground="#2980B9" />
                            <TextBox
            x:Name="fullInfoTextBox"
            Style="{StaticResource ResultTextBoxStyle}"
            Text=""
            TextWrapping="Wrap"
            Height="80"
            VerticalScrollBarVisibility="Auto" />
                        </StackPanel>
                    </Border>

                    <!-- Подсказка по функциям -->
                    <Expander 
                        Header="Доступные функции"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Foreground="#2C3E50"
                        BorderBrush="#BDC3C7"
                        BorderThickness="1"
                        Margin="0,30,0,0">
                        <TextBlock
                            TextWrapping="Wrap"
                            FontSize="14"
                            Foreground="#5D6D7E"
                            Padding="10">
                            • Арифметика: +, -, *, /, ^ (степень)&#x0a;
                            • Константы: pi, e&#x0a;
                            • Тригонометрия: sin(x), cos(x), tan(x), atan(x)&#x0a;
                            • Экспонента: exp(x)&#x0a;
                            • Логарифмы: log(x) - натуральный, log10(x) - десятичный&#x0a;
                            • Корень: sqrt(x)&#x0a;
                            • Модуль: abs(x)&#x0a;
                            Примеры: x^2-4, sin(x)+cos(x), exp(x)-2
                        </TextBlock>
                    </Expander>

                </StackPanel>
            </ScrollViewer>

        </Border>

        <!-- Правая панель - График -->
        <Border
            Grid.Column="1"
            Margin="15"
            Background="White"
            CornerRadius="12"
            BorderBrush="#E0E0E0"
            BorderThickness="1">

            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="20"
                    Opacity="0.1"
                    ShadowDepth="3"
                    Direction="270" />
            </Border.Effect>

            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Заголовок графика -->
                <TextBlock
                    Grid.Row="0"
                    Style="{StaticResource TitleStyle}"
                    Text="График функции"
                    Margin="0,0,0,15" />

                <!-- Сам график -->
                <Border
                    Grid.Row="1"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="8">
                    <WindowsFormsHost>
                        <wf:Chart x:Name="ChartLine">
                            <wf:Chart.Series>
                                <wf:Series ChartType="Line" />
                            </wf:Chart.Series>
                            <wf:Chart.ChartAreas>
                                <wf:ChartArea />
                            </wf:Chart.ChartAreas>
                        </wf:Chart>
                    </WindowsFormsHost>
                </Border>

            </Grid>

        </Border>

    </Grid>
</Page>