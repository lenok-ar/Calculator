<Page x:Class="Calculator.page.IntegralWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Численное интегрирование" 
      Height="800" 
      Width="1200"
      Background="#F5F7FA">

    <Page.Resources>
        <!-- Стили как в Dichotomy.xaml -->
        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="24" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="#2C3E50" />
        </Style>

        <Style x:Key="SubTitleStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="#34495E" />
            <Setter Property="Margin" Value="0,0,0,5" />
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="#34495E" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,0,0,5" />
        </Style>

        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Height" Value="40" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Background" Value="#FFFFFF" />
            <Setter Property="BorderBrush" Value="#BDC3C7" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#3498DB" />
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#2980B9" />
                    <Setter Property="BorderThickness" Value="3" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ResultTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource InputTextBoxStyle}">
            <Setter Property="Background" Value="#F8F9FA" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="Foreground" Value="#2C3E50" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>

        <!-- Кнопки как в Dichotomy.xaml -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="180" />
            <Setter Property="Height" Value="45" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Background" Value="#3498DB" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="8">
                            <ContentPresenter 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2980B9" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1F618D" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#2ECC71" />
            <Setter Property="Width" Value="140" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#27AE60" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#229954" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#E74C3C" />
            <Setter Property="Width" Value="120" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C0392B" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#A93226" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BackButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#95A5A6" />
            <Setter Property="Width" Value="120" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7F8C8D" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#616A6B" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стили для чекбоксов -->
        <Style x:Key="CheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Margin" Value="5,3" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="#2C3E50" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>

        <!-- Стиль для панелей результатов -->
        <Style x:Key="ResultBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="#E8F4F8" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="12" />
            <Setter Property="BorderBrush" Value="#AED6F1" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Margin" Value="0,0,0,8" />
        </Style>

        <!-- Стиль для прогресс-бара -->
        <Style x:Key="ProgressBarStyle" TargetType="ProgressBar">
            <Setter Property="Height" Value="20" />
            <Setter Property="Foreground" Value="#3498DB" />
            <Setter Property="Background" Value="#ECF0F1" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#BDC3C7" />
        </Style>

    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Левая панель - Ввод данных -->
        <Border
            Grid.Column="0"
            Margin="15"
            Background="White"
            CornerRadius="12"
            BorderBrush="#E0E0E0"
            BorderThickness="1">

            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="20"
                    Opacity="0.1"
                    ShadowDepth="3"
                    Direction="270" />
            </Border.Effect>

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="25">

                    <!-- Заголовок -->
					<TextBlock
                        Style="{StaticResource TitleStyle}"
                        Margin="0,0,0,20" ><Run Text="Численное"/><LineBreak/><Run Text="интегрирование"/></TextBlock>

					<!-- Функция -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Style="{StaticResource LabelStyle}" Text="Функция f(x):" />
                        <TextBox
                            x:Name="FunctionTextBox"
                            Style="{StaticResource InputTextBoxStyle}"
                            Text="pow(x,2)"
                            ToolTip="Поддерживаются: sin(x), cos(x), sqrt(x), log(x), exp(x), pow(x,n)" />
                    </StackPanel>

                    <!-- Интервал интегрирования -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Style="{StaticResource LabelStyle}" Text="Начало (a):" />
                            <TextBox
                                x:Name="ATextBox"
                                Style="{StaticResource InputTextBoxStyle}"
                                Text="0" />
                        </StackPanel>

                        <TextBlock 
                            Grid.Column="1" 
                            Text="–" 
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            FontSize="20"
                            FontWeight="Bold"
                            Foreground="#7F8C8D" />

                        <StackPanel Grid.Column="2">
                            <TextBlock Style="{StaticResource LabelStyle}" Text="Конец (b):" />
                            <TextBox
                                x:Name="BTextBox"
                                Style="{StaticResource InputTextBoxStyle}"
                                Text="1" />
                        </StackPanel>
                    </Grid>

                    <!-- Точность и разбиения -->
                    <Grid Margin="0,0,0,20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="15" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Точность -->
                        <StackPanel Grid.Row="0" Grid.Column="0">
                            <TextBlock Style="{StaticResource LabelStyle}" Text="Точность (ε):" />
                            <TextBox
                                x:Name="EpsilonTextBox"
                                Style="{StaticResource InputTextBoxStyle}"
                                Text="0.001" />
                        </StackPanel>

                        <!-- Количество разбиений -->
                        <StackPanel Grid.Row="0" Grid.Column="2">
                            <TextBlock Style="{StaticResource LabelStyle}" Text="Разбиения (n):" />
                            <TextBox
                                x:Name="NTextBox"
                                Style="{StaticResource InputTextBoxStyle}"
                                Text="100" />
                        </StackPanel>

                        <!-- Автоматический подбор -->
                        <CheckBox x:Name="AutoNCheckBox" 
                                  Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                                  Style="{StaticResource CheckBoxStyle}"
                                  Content="Автоматический подбор разбиений"
                                  Margin="0,15,0,0"
                                  Checked="AutoNCheckBox_Checked"
                                  Unchecked="AutoNCheckBox_Unchecked" />
                    </Grid>

                    <!-- Методы интегрирования -->
                    <Border
                        Background="#F8F9FA"
                        CornerRadius="8"
                        Padding="15"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock 
                                Style="{StaticResource SubTitleStyle}" 
                                Text="Методы интегрирования:"
                                Foreground="#2980B9" />

                            <StackPanel Margin="10,5,0,0">
                                <CheckBox x:Name="RectLeftCheckBox" 
                                          Style="{StaticResource CheckBoxStyle}"
                                          Content="Левые прямоугольники" />
                                <CheckBox x:Name="RectMiddleCheckBox" 
                                          Style="{StaticResource CheckBoxStyle}"
                                          Content="Средние прямоугольники" />
                                <CheckBox x:Name="RectRightCheckBox" 
                                          Style="{StaticResource CheckBoxStyle}"
                                          Content="Правые прямоугольники" />
                                <CheckBox x:Name="TrapezoidalCheckBox" 
                                          Style="{StaticResource CheckBoxStyle}"
                                          Content="Метод трапеций" />
                                <CheckBox x:Name="SimpsonCheckBox" 
                                          Style="{StaticResource CheckBoxStyle}"
                                          Content="Метод Симпсона" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Кнопки управления -->
                    <StackPanel Margin="0,0,0,20">
                        <Button
                            x:Name="CalculateButton"
                            Style="{StaticResource ActionButtonStyle}"
                            Content="Вычислить интеграл"
                            Click="CalculateButton_Click" />

                            <Button
                                x:Name="ClearButton"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Content="Очистить"
                                Margin="10,0,0,0"
                                Click="ClearButton_Click" />
                    </StackPanel>

                    <!-- Панель прогресса -->
                    <Border
                        x:Name="ProgressPanel"
                        Style="{StaticResource ResultBorderStyle}"
                        Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock 
                                Style="{StaticResource LabelStyle}" 
                                Text="Прогресс расчета:"
                                Foreground="#2980B9" />

                            <ProgressBar
                                x:Name="CalculationProgress"
                                Style="{StaticResource ProgressBarStyle}"
                                Margin="0,10,0,5" />

                            <TextBlock 
                                x:Name="ProgressText"
                                TextAlignment="Center"
                                Foreground="#5D6D7E"
                                Margin="0,0,0,5" />

                            <TextBlock 
                                x:Name="StatusText"
                                TextAlignment="Center"
                                FontWeight="Bold"
                                FontSize="14" />
                        </StackPanel>
                    </Border>

                    <!-- Результаты -->
                    <Border
                        Style="{StaticResource ResultBorderStyle}"
                        Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock 
                                Style="{StaticResource SubTitleStyle}" 
                                Text="Результаты:"
                                Foreground="#2980B9" />

                            <ScrollViewer 
                                x:Name="ResultsScrollViewer"
                                Height="180"
                                VerticalScrollBarVisibility="Auto"
                                Margin="0,10,0,0">
                                <StackPanel x:Name="ResultsPanel" />
                            </ScrollViewer>
                        </StackPanel>
                    </Border>

                    <!-- История разбиений -->
                    <Border
                        Style="{StaticResource ResultBorderStyle}"
                        Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock 
                                Style="{StaticResource SubTitleStyle}" 
                                Text="История разбиений:"
                                Foreground="#2980B9" />

                            <ScrollViewer 
                                x:Name="HistoryScrollViewer"
                                Height="150"
                                VerticalScrollBarVisibility="Auto"
                                Margin="0,10,0,0">
                                <StackPanel x:Name="HistoryPanel" />
                            </ScrollViewer>
                        </StackPanel>
                    </Border>

                    <!-- Лог выполнения -->
                    <Border
                        Style="{StaticResource ResultBorderStyle}">
                        <StackPanel>
                            <TextBlock 
                                Style="{StaticResource SubTitleStyle}" 
                                Text="Лог выполнения:"
                                Foreground="#2980B9" />

                            <TextBox
                                x:Name="LogTextBox"
                                Style="{StaticResource ResultTextBoxStyle}"
                                Height="120"
                                Margin="0,10,0,0"
                                FontFamily="Consolas"
                                FontSize="12"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto" />
                        </StackPanel>
                    </Border>

                    <!-- Кнопка назад -->
                    <Button
                        x:Name="BackButton"
                        Style="{StaticResource BackButtonStyle}"
                        Content="← Назад"
                        HorizontalAlignment="Right"
                        Margin="0,25,0,10"
                        Click="BackButton_Click" />

                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Правая панель - График -->
        <Border
            Grid.Column="1"
            Margin="15"
            Background="White"
            CornerRadius="12"
            BorderBrush="#E0E0E0"
            BorderThickness="1">

            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="20"
                    Opacity="0.1"
                    ShadowDepth="3"
                    Direction="270" />
            </Border.Effect>

            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Заголовок графика -->
                <TextBlock
                    Grid.Row="0"
                    Style="{StaticResource TitleStyle}"
                    Text="График функции"
                    Margin="0,0,0,15" />

                <!-- Сам график -->
                <Border
                    Grid.Row="1"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="8"
                    Background="White">
                    <Canvas x:Name="PlotCanvas">
                        <TextBlock 
                            x:Name="NoPlotText"
                            Text="График появится после расчета"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="#95A5A6"
                            FontSize="16"
                            FontStyle="Italic" />
                    </Canvas>
                </Border>

                <!-- Подсказка -->
                <TextBlock
                    Grid.Row="2"
                    Text="* Разные цвета показывают разные методы интегрирования"
                    FontSize="12"
                    Foreground="#7F8C8D"
                    FontStyle="Italic"
                    Margin="0,10,0,0" />

            </Grid>
        </Border>

    </Grid>
</Page>